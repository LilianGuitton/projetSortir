{% extends 'base.html.twig' %}

{% block body %}
    <h2 class="titre1">Liste des sorties</h2>
    <div class="tableSortie">
    <table >
       <caption class="hidden">Liste des sorties ouvertes</caption>
        <thead>
            <tr>
                <th class="th-sortie">Nom de la sortie   </th>
                <th class="th-sortie">Date de la sortie   </th>
                <th class="th-sortie">Organisateur   </th>
                <th class="th-sortie"> Action </th>
            </tr>
        </thead>
        <tbody class="tbody">
            {% for sortie in sorties %}
                {% if sortie.etat == "Ouvert" %}
                    <tr>
                        <td>{{ sortie.nom }}</td>
                        <td>{{ sortie.dateHeureDebut|date("d/m/Y") }}</td>
                        <td>{{ sortie.organisateur.pseudo }}</td>
                        <td><a href="{{ path("app_annuler_sortie_admin", {slug: sortie.slug}) }}">Annuler</a></td>
                    </tr>
                {% endif %}
            {% endfor %}
        </tbody>
    </table>
    </div>
{% endblock %}