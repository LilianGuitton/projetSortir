{% extends 'base.html.twig' %}

{% block body %}
    <h2>Liste des sorties</h2>
    <table>
        <caption>Liste des sorties ouvertes</caption>
        <thead>
            <tr>
                <th>Nom de la sortie</th>
                <th>Date de la sortie</th>
                <th>Organisateur</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for sortie in sorties %}
                {% if sortie.etat == "Ouvert" %}
                    <tr>
                        <td>{{ sortie.nom }}</td>
                        <td>{{ sortie.dateHeureDebut|date("d/m/Y") }}</td>
                        <td>{{ sortie.organisateur.pseudo }}</td>
                        <td><a href="{{ path("app_annuler_sortie_admin", {slug: sortie.slug}) }}">Annuler</a></td>
                    </tr>
                {% endif %}
            {% endfor %}
        </tbody>
    </table>
{% endblock %}