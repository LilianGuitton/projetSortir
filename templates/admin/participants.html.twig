{% extends 'base.html.twig' %}

{% block body %}

    <style>

        table {
            table-layout: fixed;
            width: 100%;
            border-collapse: collapse;

        }
        th{
            padding: 20px;
        }


    </style>

    <div class="row justify-content-center">
        <h2 class="titre1">Liste des participants</h2>

            <div class="col-4">
                <div class="tab">
                    <table>
                        <caption>Liste des participants</caption>
                        <thead>
                        <tr>
                            <th>
                                Pseudo
                            </th>
                            <th>
                                Action
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for participant in participants %}
                            <tr>
                                <td>{{ participant.pseudo }}</td>
                                <td>
                                    {% if participant.isActif %}
                                        <a href="{{ path("app_participant_disable", {slug: participant.slug}) }} ">DÃ©sactiver</a>
                                    {% else %}
                                        <a href="{{ path("app_participant_enable", {slug: participant.slug}) }}">Activer</a>
                                    {% endif %}
                                    - <a href="{{ path("app_participant_delete", {slug: participant.slug}) }}">Supprimer</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

            </div>

    </div>

    <a href="{{ path("app_register") }}" class="btn-wide btn-normal">Ajouter un participant</a>
    <a href="{{ path("app_register_multiple") }}" class="btn-wide btn-normal">Ajouter des participants</a>
{% endblock %}