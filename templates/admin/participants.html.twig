{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <h2 class="titre1">Liste des participants</h2>


            <div class="wrapper2">
            <div class="labels d-flex">
                <div class="label column-1">
                    <span>Pseudo</span>
                </div>
                <div class="label column-2">
                    <span>Action</span>
                </div>

            </div>
            <div class="tabs">
                {% for participant in participants %}

                    <div class="tab-row">
                    <div class="column-1b">
                        <span>{{ participant.pseudo }}</span>
                    </div>
                    <div class="column-2a">
                        <div class="d-flex">
                            <div>
                                {% if participant.isActif %}
                                    <a href="{{ path("app_participant_disable", {slug: participant.slug}) }} ">Désactiver</a>
                                {% else %}
                                    <a href="{{ path("app_participant_enable", {slug: participant.slug}) }}">Activer</a>
                                {% endif %}
                                - <a href="{{ path("app_participant_delete", {slug: participant.slug}) }}">Supprimer</a>
                            </div>
                        </div>

                    </div>
                    </div>{% endfor %}
            </div>
        </div>
    </div>

