{% extends 'base.html.twig' %}

{% block title %}Créer une sortie{% endblock %}

{% block stylesheets %}
    <link href='https://fonts.googleapis.com/css?family=Montserrat:700' rel='stylesheet' type='text/css'>
{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
<div class="example-wrapper">
    <h1 class="titre1">Créer une sortie</h1>

    <!-- FORM -->
    <div class="row justify-content-center">
        <div class=" form col-2">

        </div>
        <div class=" form col-10">
            {{ form_start(createForm) }}
                    <div>
                        <p>Nom de la sortie :
                            {{ form_widget(createForm.nom) }}
                            {{ form_errors(createForm.nom) }}
                        </p>
                    </div>
                    <div>
                        <p> Date et heure du début de la sortie :
                            {{ form_widget(createForm.dateHeureDebut) }}
                            {{ form_errors(createForm.dateHeureDebut) }}
                        </p>
                    </div>
                    <div>
                        <p>Date limite d'inscription :
                            {{ form_widget(createForm.dateLimiteInscription) }}
                            {{ form_errors(createForm.dateLimiteInscription) }}
                        </p>
                    </div>
                    <div>
                        <p>Nombre de places :
                            {{ form_widget(createForm.nbInscriptionMax) }}
                            {{ form_errors(createForm.nbInscriptionMax) }}
                        </p>
                    </div>
                    <div>
                        <p>Durée :
                            {{ form_widget(createForm.duree) }}
                            {{ form_errors(createForm.duree) }}
                        </p>
                    </div>

                    <div>
                        <p>Description et infos  :
                            {{ form_widget(createForm.description) }}
                            {{ form_errors(createForm.description) }}
                        </p>
                    </div>
                    <div>
                        <p>Lieu :
                            {{ form_widget(createForm.lieu) }}
                            {{ form_errors(createForm.lieu) }}
                        </p>
                    </div>

                                                <!-- BUTTON -->
            <div class="page-wrapper">

                <button class="btn-wide btn-normal btn-sortie" name="save" value="save">Enregistrer</button>
                <button class="btn-wide btn-normal btn-sortie" name="publish" value="publish">Publier la sortie</button>

            </div>
        </div>
        {{ form_end(createForm) }}

        <div>
            <a class="btn-wide btn-normal btn-sortie btn-annuler" href="{{ path("app_home") }}" >
                Annuler
            </a>
        </div>


    </div>


</div>
{% endblock %}

{% block javascripts %}

{% endblock %}
