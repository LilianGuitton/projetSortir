{% extends 'base.html.twig' %}

{% block title %}Créer une sortie{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
<div class="example-wrapper">
    <h1>Créer une sortie</h1>

                                            <!-- FORM -->
    <div>
        {{ form_start(createForm) }}

            <div>
                 <label for="{{ field_name(createForm.nom) }}">
                     Nom :
                 </label>
                <input type="text" id="{{ field_name(createForm.nom) }}"
                    name="{{ field_name(createForm.nom) }}">
                {% for error in field_errors(createForm.nom) %}
                    <div class="error">{{ error }}</div>
                {% endfor %}
            </div>

            <div>
                <label for="{{ field_name(createForm.dateHeureDebut) }}">
                    Date et heure du début de la sortie :
                </label>
                <input type="datetime-local" id="{{ field_name(createForm.dateHeureDebut) }}"
                       name="{{ field_name(createForm.dateHeureDebut) }}">
                {% for error in field_errors(createForm.dateHeureDebut) %}
                    <div class="error">{{ error }}</div>
                 {% endfor %}
            </div>

            <div>
                <label for="{{ field_name(createForm.duree) }}">
                    Durée de la sortie en min :
                </label>
                <input type="number" id="{{ field_name(createForm.duree) }}"
                    name="{{ field_name(createForm.duree) }}" min="20">
                {% for error in field_errors(createForm.duree) %}
                    <div class="error">{{ error }}</div>
                {% endfor %}
            </div>

            <div>
                <label for="{{ field_name(createForm.dateLimiteInscription) }}">
                    Date limite d'inscription :
                </label>
                <input type="datetime-local" id="{{ field_name(createForm.dateLimiteInscription) }}"
                    name="{{ field_name(createForm.dateLimiteInscription) }}" >
                {% for error in field_errors(createForm.dateLimiteInscription) %}
                    <div class="error">{{ error }}</div>
                {% endfor %}
            </div>

            <div>
                <label for="{{ field_name(createForm.nbInscriptionMax) }}">
                    Nombre d'inscription maximum :
                </label>
                <input type="number" id="{{ field_name(createForm.nbInscriptionMax) }}"
                    name="{{ field_name(createForm.nbInscriptionMax) }}" min="2">
                {% for error in field_errors(createForm.nbInscriptionMax) %}
                    <div class="error">{{ error }}</div>
                {% endfor %}
            </div>

            <div>

                {{ form_label(createForm.lieu) }}
                {{ form_widget(createForm.lieu) }}

            </div>

                                                <!-- BUTTON -->
        <div>

            <button name="save">Enregistrer</button>
            <button name="publish">Publier la sortie</button>

        </div>

        {{ form_end(createForm) }}

        <div>
            <button>Annuler</button>
        </div>


    </div>


</div>
{% endblock %}
