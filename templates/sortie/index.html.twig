{% extends 'base.html.twig' %}

{% block title %}Créer une sortie{% endblock %}

{% block stylesheets %}
    <link href='https://fonts.googleapis.com/css?family=Montserrat:700' rel='stylesheet' type='text/css'>
{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
<div class="example-wrapper">
    <h1 class="titre1">Créer une sortie</h1>

    <!-- FORM -->
    <div class="row">
        <div class="col-4">
            {{ form_start(createForm) }}
                    <div>
                        {{ form_row(createForm.nom) }}
                    </div>
                    <div>
                        {{ form_row(createForm.dateHeureDebut) }}
                    </div>
                    <div>
                        {{ form_row(createForm.duree) }}
                    </div>
                    <div>
                        {{ form_row(createForm.dateLimiteInscription) }}
                    </div>
                    <div>
                        {{ form_row(createForm.nbInscriptionMax) }}
                    </div>
                    <div>

                    </div>
                    <div>
                        {{ form_row(createForm.lieu) }}
                    </div>

                                                <!-- BUTTON -->
            <div>

                <button  name="save" value="save">Enregistrer</button>
                <button  name="publish" value="publish">Publier la sortie</button>

            </div>
        </div>
        {{ form_end(createForm) }}

        <div>
            <a class="" href="{{ path("app_home") }}" >
                Annuler
            </a>
        </div>


    </div>


</div>
{% endblock %}

{% block javascripts %}

{% endblock %}
