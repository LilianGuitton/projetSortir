{% extends 'base.html.twig' %}

{% block title %}Modifier une sortie{% endblock %}


{% block body %}

    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <div class="example-wrapper">
         <h1 class="titre1">Modifier une sortie</h1>

                                                <!-- FORM -->
        <div>
            {{ form_start(updateForm) }}
            <div>
                {{ form_row(updateForm.nom) }}
            </div>
            <div>
                {{ form_row(updateForm.dateHeureDebut) }}
            </div>
            <div>
                {{ form_row(updateForm.duree) }}
            </div>
            <div>
                {{ form_row(updateForm.dateLimiteInscription) }}
            </div>
            <div>
                {{ form_row(updateForm.nbInscriptionMax) }}
            </div>
            <div>
                {{ form_row(updateForm.lieu) }}
            </div>
                                <!-- BUTTON -->
            <button name="save"  value="save">Enregistrer</button>
            <button name="publish" value="publish">Publier la sortie</button>
        </div>

            {{ form_end(updateForm) }}

            <div>
                <a class="btn btn-secondary" href="{{ path('app_sortie_supprimer', {slug : sortie.slug}) }}" role="button" >
                    Supprimer la sortie
                </a>
            </div>
            <div>
                <a class="btn btn-secondary" href="{{ path("app_home") }}" role="button" >
                    Annuler
                </a>
            </div>


    </div>
{% endblock %}
