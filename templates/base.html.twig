<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <!-- pour le responsive-->
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
        <!--css profil-->
        <link href="{{ asset('/css/profil.css') }}" rel="stylesheet"/>

        <title>{% block title %}Sortir.com{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
        <script defer src="{{ asset('/js/profil.js') }}"> </script>
    </head>
    <body>
    <!-- HEADER -->



    <header class="container-fluid bg-light">

        <div class="row justify-content-between">
            <div class="col-4">
                <img src="https://i.postimg.cc/2S826jsq/images.png" alt="logo">

            </div>
            <div class="col-4">
                <h2 class="ml1">
           <span class="text-wrapper">
           <span class="line line1"></span>
           <span class="letters">Envie de sortir ce soir?</span>
           <span class="line line2"></span>
           </span>
                </h2>

            </div>
            <nav class="navbar navbar-expand-lg col-4">
                <div class="container-fluid">
                    <div class="collapse navbar-collapse justify-content-end" id="navbarNavAltMarkup">
                        {% if app.user %}
                        <div class="navbar-nav">

                            {% if is_granted("ROLE_ADMIN") %}
                            <div>
                                <a class="nav-link " href="{{ path('app_ville') }}">Ville</a>
                            </div>
                            <div>
                                <a class="nav-link " href="{{ path('app_campus') }}">Campus</a>
                            </div>
                            {% endif %}
                            <div>
                                <a class="nav-link"  href="{{ path('app_home') }}">Accueil</a>
                            </div>
                            <div>
                                <a class="nav-link" href="{{ path('app_profil') }}">Mon profil</a>
                            </div>
                            <div>
                                <a class="nav-link" href="{{ path('app_logout') }}">Se déconnecter</a>
                            </div>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </nav>
        </div>

    </header>
    <!-- CONTENT -->
    <content>
        {% block body %}{% endblock %}
    </content>
    <!-- FOOTER -->
    <footer>

    </footer>

    </body>

    <!-- JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/2.0.2/anime.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.5/dist/umd/popper.min.js" integrity="sha384-Xe+8cL9oJa6tN/veChSP7q+mnSPaj5Bcu9mPX5F5xIGE0DVittaqT5lorf0EI7Vk" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.min.js" integrity="sha384-ODmDIVzN+pFdexxHEHFBQH3/9/vQ9uori45z4JjnFsRydbmQbmL5t1tQ0culUzyK" crossorigin="anonymous"></script>

</html>
