{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1 class="titre1">Réinitialise ton mot de passe par ici </h1>
    <div class="row justify-content">
        <div class="col-4">
        </div>
        <div class="col-4">
            <div class="text-center">
                {{ form_start(requestForm) }}
                {{ form_row(requestForm.email) }}
                <div>
                    <small>
                        Entre ton adresse email et nous t'enverront
                        un lien pour réinitialiser ton mot de passe.
                    </small>
                </div>
            </div>
            <button class="btn-wide btn-normal btnVille btnModif">Envoyer l'email</button>
            {{ form_end(requestForm) }}
        </div>
    </div>


{% endblock %}
